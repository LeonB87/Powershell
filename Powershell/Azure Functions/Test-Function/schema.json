{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "string": {
      "type": "string"
    },
    "stringFixedInput": {
      "type": "string",
      "enum": ["Option A", "Option B", "Option C"]
    },
    "listArray": {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "emailAddress": {
      "type": "string",
      "pattern": "(?:[a-z0-9!#$%&'*+\\/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+\\/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])"
    },
    "azureVMList": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "vmName": {
              "type": "string"
            },
            "resourcegroupName": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "vmSize": {
              "type": "string"
            },
            "ResourceId": {
              "type": "string"
            }
          },
          "required": [
            "vmName",
            "resourcegroupName",
            "location",
            "vmSize",
            "ResourceId"
          ]
        }
      ]
    }
  },
  "required": ["string", "listArray", "stringFixedInput", "emailAddress"]
}
